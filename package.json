{
  "name": "TrailMaps",
  "version": "0.0.1",
  "description": "Maps for long-distance hiking trails",
  "private": true,
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "npm run test:server",
    "test:server": "mocha test/server/*.js",
    "test:integration": "mocha test/integration/*.js --timeout 5000",
    "test:client": "echo 'Client tests require browser environment - see test/client/runner.html'",
    "test:all": "npm run lint && npm run typecheck && npm run test:server && npm run test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "typecheck": "npx tsc -p jsconfig.json --noEmit",
    "start": "node server.js",
    "dev": "node --watch --watch-preserve-output server.js"
  },
  "repository": "",
  "author": "Eric Lee",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0 <23.0.0",
    "npm": ">=10.0.0 <11.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "less-middleware": "^3.1.0",
    "method-override": "^3.0.0",
    "mongodb": "^5.8.1",
    "morgan": "^1.10.1",
    "pug": "^3.0.3",
    "serve-favicon": "^2.5.0",
    "xml2js": "^0.6.2"
  },
  "overrides": {
    "less": "^4.2.0",
    "form-data": "^4.0.0",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "chai": "^4.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "mocha": "^11.7.4",
    "prettier": "^3.4.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  }
}
