header
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container-fluid
      .navbar-header
        button.navbar-toggle(type='button' data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Trail Maps
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-pills
          li(data-bind="css: {active: activeMapName() === 'bing'}")
            a(href='#{baseMapUrl}/bing', data-bind='click: onPillClick') Bing
          li(data-bind="css: {active: activeMapName() === 'google'}")
            a(href='#{baseMapUrl}/google', data-bind='click: onPillClick') Google
          li(data-bind="css: {active: activeMapName() === 'here'}")
            a(href='#{baseMapUrl}/here', data-bind='click: onPillClick') Here
        
        ul.nav.navbar-nav
          li
            p.navbar-text.hidden-xs(style='padding-right:15px') |
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle="dropdown") Tools
              b.caret
            ul.dropdown-menu
        
        form.navbar-form.navbar-right(id='searchForm', role='search' data-bind='submit: search')
          .form-group
            // Have to update form elements after each keypress for IE: https://github.com/SteveSanderson/knockout/issues/760
            input.form-control.input-sm.typeahead(id='searchBox', type='text', autocomplete='off', data-bind='value: searchText, valueUpdate: "afterkeydown"', placeholder='waypoint, mile, or lat/long')
